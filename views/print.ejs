<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <style>            
        </style>
          <link href="css/print.css" rel="stylesheet">
    </head>
    <body>
        <div class="invoice-box">
            <table cellpadding="0" cellspacing="0">
                <tr class="top">
                    <td colspan="4">                        
                        <tr>
                            <td class="title">
                                <p>ESTRUTETO - Perfis em aço galvanizado</p>
                                <p><h6>Rua Antonio Orlando, nº 470</p>
                                <p>estruteto@hotmail.com</h6></p>
                                <!--<img src="{#asset Invoice logo.png @encoding=dataURI}" style="width:100%; max-width:300px;" />-->
                            </td>
                            <td>
                                
                            </td>
                            <td>
                                
                            </td>
                            <td>
                                Orçamento
                                <br> <%=orcamento[0].data%>                                    
                            </td>
                        </tr>                        
                    </td>
                </tr>
            </table>
            <table cellpadding="0" cellspacing="0">
                <tr class="information ">
                    <td colspan="4">
                        <table>
                            <tr>
                                <td>
                                    <%=orcamento[0].nome_cliente%><br>
                                    <%=orcamento[0].endereco%><br>
                                    <%=orcamento[0].telefone%>
                                </td>
                                <td>
                                    
                                </td>
                                <td>
                                    
                                </td>                    
                                <td>
                                    
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
            <table cellpadding="0" cellspacing="0">
                <tr class="heading ">
                    <td>
                        Qtd.
                    </td>
                    <td>
                        Item
                    </td>
                    <td>
                        Preço Unit.
                    </td>
                    <td>
                        Preço Total
                    </td>
                </tr>
                <% var soma = 0 %>
                <% for(var i = 0; i < orcamento.length; i++){ %>                    
                <tr class="item">
                    <td>
                        <%=orcamento[i].qtd%>
                    </td>
                    <td>
                        <%=orcamento[i].nome_produto%>
                    </td>
                    <td>
                        <%=orcamento[i].unitario%>
                    </td>
                    <td>
                        <%=orcamento[i].total%>
                    </td>
                </tr>
                    <% soma = soma + parseFloat(orcamento[i].total)%>
                <% } %>
                <tr class="total ">
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        Total: <%=soma.toFixed(2)%>
                    </td>
                </tr>
            </table>
            <table cellpadding="0" cellspacing="0">
                <tr class="top">
                    <td colspan="4">                        
                        <tr>
                            <td class="title">
                                <h6><%=orcamento[0].observacao%></h6>
                            </td>
                            <td>
                                
                            </td>
                            <td>
                                
                            </td>
                            <td>                                

                            </td>
                        </tr>                        
                    </td>
                </tr>
            </table>
        </div>
    </body>
</html>